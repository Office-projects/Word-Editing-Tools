<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
			<tab
					id="tabEditingTools"
					getLabel="GetLabelText"
					insertAfterMso="TabHome"
          keytip="ET"
					>
				<group
						id="grpEditing"
						label="Editing"
						imageMso="Copy"
						>
					<dropDown
							id="drpLanguages"
							label="Proof Language"
							getItemLabel="GetItemLabel"
							onAction="OnAction_Dropdown"
							getItemCount="GetItemCount"
							getSelectedItemID="GetSelectedItemID"
							sizeString= "XXXXXXXXXXXXXXXXXXX"
							screentip="Update Shape(s) Color"
							supertip="Update the color for the selected shapes"
					/>
					<button
							id="btnApplyLanguage"
							label="Apply Language"
							onAction="OnAction"
							imageMso="SetLanguage"
							size="normal"
							screentip="Apply Language"
							supertip="Apply Language..."
              keytip="AL"
							/>
					<button
							id="btnFindSingularData"
							label="Find Singular Data"
							onAction="OnAction"
							imageMso="Insights"
							size="normal"
							screentip="Find Singular Data"
							supertip="Find Singular Data..."
              keytip="FSD"
							/>
				</group>
				<group
						id="grpProofing"
						label="Proofing"
						imageMso="FormatAsTableGallery"
						>
					<button
							id="btnWordList"
							label="Word List"
							onAction="OnAction"
							imageMso="ReviewShowMarkupMenu"
							size="normal"
							screentip="Word List"
							supertip="Word List..."
              keytip="WL"
							/>
					<button
							id="btnWordFrequencyList"
							label="Word Frequency List"
							onAction="OnAction"
							imageMso="ReviewShowMarkupMenu"
							size="normal"
							screentip="Word Frequency List"
							supertip="Word Frequency List..."
              keytip="WFL"
							/>
					<button
							id="btnCheckProperNouns"
							label="Check Proper Nouns"
							onAction="OnAction"
							imageMso="SpellingAndGrammar"
							size="normal"
							screentip="Check Proper Nouns"
							supertip="Check Proper Nouns..."
              keytip="WL"
							/>
					<separator
						id="separator1"
					/>
					<editBox
							id="txtMinPhraseLen"
							label="Min. Phrase Length"
							onChange="OnChange"
							getText="GetLabelText"
							sizeString= "XXX"
							maxLength="1"
							screentip="Revision Character"
							supertip="This character will appear in the middle of the triangle."
						/>
					<editBox
							id="txtMaxPhraseLen"
							label="Max. Phrase Length"
							onChange="OnChange"
							getText="GetLabelText"
							sizeString= "XXX"
							maxLength="1"
							screentip="Revision Character"
							supertip="This character will appear in the middle of the triangle."
						/>
					<button
							id="btnPhraseFrequencyList"
							label="Phrase Frequency List"
							onAction="OnAction"
							imageMso="ReviewShowMarkupMenu"
							size="normal"
							screentip="Phrase Frequency List"
							supertip="Phrase Frequency List..."
              keytip="PFL"
							/>
				</group>
				<group
					id="grpFinishing"
					label="Finishing"
					imageMso="Help">
					<button
						id="btnAcceptFormattingChanges"
						label="Accept Formatting Changes"
						onAction="OnAction"
						imageMso="ReviewAcceptChange"
						size="large"
						screentip="Find Singular Data"
						supertip="Find Singular Data..."
						keytip="FSD"
							/>
				</group>
				<group
					id="grpBoilerplate"
					label="Boilerplate"
					imageMso="Help">
					<dropDown
							id="drpComments"
							label="Comments"
							getItemLabel="GetItemLabel"
							onAction="OnAction_Dropdown"
							getItemCount="GetItemCount"
							getSelectedItemID="GetSelectedItemID"
							sizeString= "XXXXXXXXXXXXXXXXXXX"
							screentip="Update Shape(s) Color"
							supertip="Update the color for the selected shapes"
					/>
					<button
							id="btnApplyComment"
							label="Apply Comment"
							onAction="OnAction"
							imageMso="ReviewNewComment"
							size="normal"
							screentip="Apply Language"
							supertip="Apply Language..."
              keytip="AL"
							/>
				</group>
				<group
						id="grpHelp"
						label="Help"
						imageMso="Help">
					<button
							id="btnOpenReadMe"
							label="How To...   "
							onAction="OnAction"
							imageMso="Help"
							size="normal"
							screentip="How To..."
							supertip="This opens the read me page in GitHub with detailed instructions of the Add-In functionality."
              keytip="HLP"
							/>
					<button
							id="btnOpenNewIssue"
							label="Report Issue"
							onAction="OnAction"
							imageMso="MacroSecurity"
							size="normal"
							screentip="Report An Issue"
							supertip="This will open a new issue page in GitHub. The user will need to login to raise an issue."
              keytip="RPT"
							/>
					<button
							id="btnSettings"
							label="Settings"
							onAction="OnAction"
							imageMso="PropertySheet"
							size="normal"
							screentip="Add-In Settings Form"
							supertip="This opens a user form with a list of custom properties stored in the file."
              keytip="SET"
							/>
				</group>
				<group
						id="grpAbout"
						label="About"
						imageMso="Info">
					<labelControl
							id="lblDescription"
							label="Add-In Name: "
							getEnabled="False"
							/>
					<labelControl
							id="lblReleaseDate"
							label="Release Date: "
							getEnabled="False"
							/>
					<labelControl
							id="lblCopyright"
							label="Copyright: "
							getEnabled="False"
							/>
					<labelControl
							id="txtDescription"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<labelControl
							id="txtReleaseDate"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<labelControl
							id="txtCopyright"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<button
							id="btnStart"
							onAction="OnAction"
              keytip="RUN"
							/>
				</group>
			</tab>
		</tabs>
  </ribbon>
</customUI>

