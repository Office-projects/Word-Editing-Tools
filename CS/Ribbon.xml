<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
			<tab
					id="tabEditingTools"
					getLabel="GetLabelText"
					insertAfterMso="TabHome"
          keytip="ET"
					>
				<group
						id="grpProofing"
						label="Tools"
						imageMso="FormatAsTableGallery"
						>
					<button
							id="btnApplyLanguage"
							label="Apply Language"
							onAction="OnAction"
							imageMso="SetLanguage"
							size="large"
							screentip="Apply Proofing Language"
							supertip="Applies the proofing language from the saved settings value"
              keytip="AL"
							/>
					<splitButton 
						id="sbnComments" 
						size="large" 
						>
						<button 
							id="btnApplyComments" 
							imageMso="ReviewNewComment" 
							label="Apply Comments" 
							onAction="OnAction"
							screentip="Apply Comments"
							supertip="Apply standard comments from a list in the settings"
							keytip="AC"
							/>
						<menu 
							id="mnuComments"
							>
							<button 
								id="btnCommentList" 
								imageMso="TableInsertGallery"
								label="Comment List" 
								onAction="OnAction"
								screentip="Comment Table"
								supertip="Open the comment list to view, edit, import, export or apply"
								/>
							<!--<dynamicMenu 
								id="dmnApplyComment" 
								label="Apply Comment" 
								getContent="GetContent" 
								screentip="Apply Comment"
								supertip="Apply individual standard comment"
								/>-->
						</menu>
					</splitButton>
					<splitButton
						id="sbnSingularData"
						size="large"
						>
						<button
							id="btnSingularData"
							imageMso="ReviewShowMarkupMenu"
							label="Singular Data"
							onAction="OnAction"
							screentip="Singular Data"
							supertip="Find Singular Data..."
							keytip="SD"
							/>
						<menu
							id="mnuSingularData"
							>
							<button
								id="btnSingularDataList"
								imageMso="TableInsertGallery"
								label="Singular Data Table"
								onAction="OnAction"
								screentip="Singular Data"
								supertip="Find Singular Data..."
								/>
						</menu>
					</splitButton>
					<splitButton
						id="sbnProperNouns"
						size="large"
						>
						<button
							id="btnProperNouns"
							imageMso="ReviewShowMarkupMenu"
							label="Proper Nouns"
							onAction="OnAction"
							screentip="Proper Nouns"
							supertip="Check Proper Nouns..."
							keytip="PN"
							/>
						<menu
							id="mnuProperNouns"
							>
							<button
								id="btnProperNounsList"
								imageMso="TableInsertGallery"
								label="Proper Noun Table"
								onAction="OnAction"
								screentip="Proper Nouns"
								supertip="Check Proper Nouns..."
								/>
						</menu>
					</splitButton>
					<splitButton
						id="sbnWords"
						size="large"
						>
						<button
							id="btnWords"
							imageMso="ReviewShowMarkupMenu"
							label="Words"
							onAction="OnAction"
							screentip="Word List"
							supertip="Word List..."
							keytip="AC"
							/>
						<menu
							id="mnuWords"
							>
							<button
								id="btnWordsList"
								imageMso="TableInsertGallery"
								label="Word Table"
								onAction="OnAction"
								screentip="Word List"
								supertip="Word List..."
								/>
						</menu>
					</splitButton>
					<splitButton
						id="sbnPhrases"
						size="large"
						>
						<button
							id="btnPhrases"
							imageMso="ReviewShowMarkupMenu"
							label="Phrases"
							onAction="OnAction"
							screentip="Phrase List"
							supertip="Phrase List..."
							keytip="PL"
							/>
						<menu
							id="mnuPhrases"
							>
							<button
								id="btnPhraseList"
								imageMso="TableInsertGallery"
								label="Phrase Table"
								onAction="OnAction"
								screentip="Phrase List"
								supertip="Phrase List..."
								/>
						</menu>
					</splitButton>
					<separator id="sep2"/>
					<button
						id="btnAcceptChanges"
						label="Accept Changes"
						onAction="OnAction"
						imageMso="ReviewAcceptChange"
						size="large"
						screentip="Accept Formatting Changes"
						supertip="Accept formatting changes in one click"
						keytip="FSD"
							/>
				</group>
				<group
						id="grpHelp"
						label="Help"
						imageMso="Help">
					<button
							id="btnOpenReadMe"
							label="How To...   "
							onAction="OnAction"
							imageMso="Help"
							size="large"
							screentip="How To..."
							supertip="This opens the read me page in GitHub with detailed instructions of the Add-In functionality."
              keytip="HLP"
							/>
					<button
							id="btnOpenNewIssue"
							label="Report Issue"
							onAction="OnAction"
							imageMso="MacroSecurity"
							size="large"
							screentip="Report An Issue"
							supertip="This will open a new issue page in GitHub. The user will need to login to raise an issue."
              keytip="RPT"
							/>
					<button
							id="btnSettings"
							label="Settings"
							onAction="OnAction"
							imageMso="PropertySheet"
							size="large"
							screentip="Add-In Settings Form"
							supertip="This opens a user form with a list of custom properties stored in the file."
              keytip="SET"
							/>
				</group>
				<group
						id="grpAbout"
						label="About"
						imageMso="Info">
					<labelControl
							id="lblDescription"
							label="Add-In Name: "
							getEnabled="False"
							/>
					<labelControl
							id="lblReleaseDate"
							label="Release Date: "
							getEnabled="False"
							/>
					<labelControl
							id="lblCopyright"
							label="Copyright: "
							getEnabled="False"
							/>
					<labelControl
							id="txtDescription"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<labelControl
							id="txtReleaseDate"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<box id="boxCopyright" boxStyle="horizontal">
					<labelControl
							id="txtCopyright"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
						<button
								id="btnCopyrightLogo"
								enabled="false"
								getImage="GetButtonImage"
								size="normal"
							/>
				</box>
				</group>
			</tab>
		</tabs>
  </ribbon>
</customUI>

