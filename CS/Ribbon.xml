<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
			<tab
					id="tabEditingTools"
					getLabel="GetLabelText"
					insertAfterMso="TabHome"
          keytip="ET"
					>
				<group
						id="grpEditing"
						label="Editing"
						imageMso="Copy"
						visible="false"
						>
					<dropDown
							id="drpLanguages"
							label="Language"
							getItemLabel="GetItemLabel"
							onAction="OnAction_Dropdown"
							getItemCount="GetItemCount"
							getSelectedItemID="GetSelectedItemID"
							sizeString= "XXXXXXXXXXXXXXXXXXX"
							screentip="Update Shape(s) Color"
							supertip="Update the color for the selected shapes"
					/>
					<button
							id="btnApplyLanguage"
							label="Apply Language"
							onAction="OnAction"
							imageMso="SetLanguage"
							size="normal"
							screentip="Apply Language"
							supertip="Apply Language..."
              keytip="AL"
							/>
				</group>
				<group
						id="grpProofing"
						label="Proofing"
						imageMso="FormatAsTableGallery"
						>
					<button
							id="btnSingularData"
							label="Singular Data"
							onAction="OnAction"
							imageMso="Insights"
							enabled="false"
							size="large"
							screentip="Singular Data"
							supertip="Find Singular Data..."
              keytip="FSD"
							visible="false"
							/>
					<button
							id="btnProperNouns"
							label="Proper Nouns"
							onAction="OnAction"
							imageMso="SpellingAndGrammar"
							size="large"
							screentip="Proper Nouns"
							supertip="Check Proper Nouns..."
              keytip="WL"
							/>
					<button
							id="btnWordList"
							label="Word List"
							onAction="OnAction"
							imageMso="ReviewShowMarkupMenu"
							size="large"
							screentip="Word List"
							supertip="Word List..."
              keytip="WL"
							/>
					<button
							id="btnWordFrequencyList"
							label="Word Frequency List"
							onAction="OnAction"
							imageMso="ReviewShowMarkupMenu"
							size="large"
							screentip="Word Frequency List"
							supertip="Word Frequency List..."
              keytip="WFL"
							visible="false"
							/>
					<button
							id="btnPhraseList"
							label="Phrase List"
							onAction="OnAction"
							imageMso="ReviewShowMarkupMenu"
							size="large"
							screentip="Phrase List"
							supertip="Phrase Frequency List..."
              keytip="PFL"
							/>
					<button
							id="btnComments"
							label="Proofing Tools"
							onAction="OnAction"
							imageMso="ReviewTrackChanges"
							size="large"
							screentip="Standard Comments"
							supertip="Standard Comments..."
              keytip="AL"
							/>
					<editBox
							id="txtMinPhraseLen"
							label="Min. Phrase Length"
							onChange="OnChange"
							getText="GetLabelText"
							sizeString= "XXX"
							screentip="Min. Phrase Length"
							supertip="Min. Phrase Length..."
							visible="false"
						/>
					<editBox
							id="txtMaxPhraseLen"
							label="Max. Phrase Length"
							onChange="OnChange"
							getText="GetLabelText"
							sizeString= "XXX"
							screentip="Max. Phrase Length"
							supertip="Max. Phrase Length..."
							visible="false"
						/>
					<button
						id="btnAcceptChanges"
						label="Accept Changes"
						onAction="OnAction"
						imageMso="ReviewAcceptChange"
						size="large"
						screentip="Accept Formatting Changes"
						supertip="Accept Formatting Changes..."
						keytip="FSD"
							/>
				</group>
				<group
						id="grpHelp"
						label="Help"
						imageMso="Help">
					<button
							id="btnOpenReadMe"
							label="How To...   "
							onAction="OnAction"
							imageMso="Help"
							size="large"
							screentip="How To..."
							supertip="This opens the read me page in GitHub with detailed instructions of the Add-In functionality."
              keytip="HLP"
							/>
					<button
							id="btnOpenNewIssue"
							label="Report Issue"
							onAction="OnAction"
							imageMso="MacroSecurity"
							size="large"
							screentip="Report An Issue"
							supertip="This will open a new issue page in GitHub. The user will need to login to raise an issue."
              keytip="RPT"
							/>
					<button
							id="btnSettings"
							label="Settings"
							onAction="OnAction"
							imageMso="PropertySheet"
							size="large"
							screentip="Add-In Settings Form"
							supertip="This opens a user form with a list of custom properties stored in the file."
              keytip="SET"
							/>
				</group>
				<group
						id="grpAbout"
						label="About"
						imageMso="Info">
					<labelControl
							id="lblDescription"
							label="Add-In Name: "
							getEnabled="False"
							/>
					<labelControl
							id="lblReleaseDate"
							label="Release Date: "
							getEnabled="False"
							/>
					<labelControl
							id="lblCopyright"
							label="Copyright: "
							getEnabled="False"
							/>
					<labelControl
							id="txtDescription"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<labelControl
							id="txtReleaseDate"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<box id="boxCopyright" boxStyle="horizontal">
					<labelControl
							id="txtCopyright"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
						<button
								id="btnCopyrightLogo"
								enabled="false"
								getImage="GetButtonImage"
								size="normal"
							/>
				</box>
				</group>
			</tab>
		</tabs>
  </ribbon>
</customUI>

