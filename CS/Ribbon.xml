<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
			<tab
					id="tabEditingTools"
					getLabel="GetLabelText"
					insertAfterMso="TabHome"
          keytip="ET"
					>
				<group
						id="grpProofing"
						label="Tools"
						imageMso="FormatAsTableGallery"
						>
					<button
							id="btnApplyLanguage"
							label="Apply Language"
							onAction="OnAction"
							imageMso="SetLanguage"
							size="large"
							screentip="Apply Proofing Language"
							supertip="Applies the proofing language from the saved settings value"
              keytip="AL"
							/>
						<button 
							id="btnCommentList" 
							imageMso="ReviewNewComment" 
							label="Standard Comments" 
							size="large"
							onAction="OnAction"
							screentip="Standard Comments List"
							supertip="Apply standard comments from a list in the settings"
							keytip="AC"
							/>
							<!--<dynamicMenu 
								id="dmnApplyComment" 
								label="Apply Comment" 
								getContent="GetContent" 
								screentip="Apply Comment"
								supertip="Apply individual standard comment"
								/>-->
						<button
							id="btnSingularDataList"
							imageMso="ReviewShowMarkupMenu"
							label="Singular Data"
							size="large"
							onAction="OnAction"
							screentip="Singular Data List"
							supertip="Find Singular Data..."
							keytip="SD"
							/>
						<button
							id="btnProperNounsList"
							imageMso="ReviewShowMarkupMenu"
							label="Proper Nouns"
							size="large"
							onAction="OnAction"
							screentip="Proper Nouns List"
							supertip="Check Proper Nouns..."
							keytip="PN"
							/>
						<button
							id="btnWordsList"
							imageMso="ReviewShowMarkupMenu"
							label="Words"
							size="large"
							onAction="OnAction"
							screentip="Word List"
							supertip="Word List..."
							keytip="AC"
							/>
						<button
							id="btnPhraseList"
							imageMso="ReviewShowMarkupMenu"
							label="Phrases"
							size="large"
							onAction="OnAction"
							screentip="Phrase List"
							supertip="Phrase List..."
							keytip="PL"
							/>
					<separator id="sep2"/>
					<button
						id="btnAcceptChanges"
						label="Accept Changes"
						onAction="OnAction"
						imageMso="ReviewAcceptChange"
						size="large"
						screentip="Accept Formatting Changes"
						supertip="Accept formatting changes in one click"
						keytip="FSD"
							/>
				</group>
				<group
						id="grpHelp"
						label="Help"
						imageMso="Help">
					<button
							id="btnOpenReadMe"
							label="How To...   "
							onAction="OnAction"
							imageMso="Help"
							size="normal"
							screentip="How To..."
							supertip="This opens the read me page in GitHub with detailed instructions of the Add-In functionality."
              keytip="HLP"
							/>
					<button
							id="btnOpenNewIssue"
							label="Report Issue"
							onAction="OnAction"
							imageMso="MacroSecurity"
							size="normal"
							screentip="Report An Issue"
							supertip="This will open a new issue page in GitHub. The user will need to login to raise an issue."
              keytip="RPT"
							/>
					<button
							id="btnSettings"
							label="Settings"
							onAction="OnAction"
							imageMso="PropertySheet"
							size="normal"
							screentip="Add-In Settings Form"
							supertip="This opens a user form with a list of custom properties stored in the file."
              keytip="SET"
							/>
				</group>
				<group
						id="grpAbout"
						label="About"
						imageMso="Info">
					<labelControl
							id="lblDescription"
							label="Add-In Name: "
							getEnabled="False"
							/>
					<labelControl
							id="lblReleaseDate"
							label="Release Date: "
							getEnabled="False"
							/>
					<labelControl
							id="lblCopyright"
							label="Copyright: "
							getEnabled="False"
							/>
					<labelControl
							id="txtDescription"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<labelControl
							id="txtReleaseDate"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
					<box id="boxCopyright" boxStyle="horizontal">
					<labelControl
							id="txtCopyright"
							getLabel="GetLabelText"
							getEnabled="False"
							/>
						<button
								id="btnCopyrightLogo"
								enabled="false"
								getImage="GetButtonImage"
								size="normal"
							/>
				</box>
				</group>
			</tab>
		</tabs>
  </ribbon>
</customUI>

